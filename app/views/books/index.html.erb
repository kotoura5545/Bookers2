  <body>
    	<div class="body">
        <div class="container">
      
        	<div class="row">
            <div class="col-xs-3">
            <%= render 'partial/form', book_create: @book_create, user: @user %>
            </div>

    <div class="col-xs-9">
        <h2>Books</h2>

        <table class="table">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
            <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user), class: "user_#{book.user.id}" do %>
            <%= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg", :size =>"50x50", class: "user_image" %><% end %>
            </td>
          <td><%= link_to book_path(book), class: "book_#{book.id}" do %>
            <%= book.book_title %><% end %>
            </td>
          <td><%= book.opinion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

    </div>
  </div>
</div>

      <footer>
    <div class="container">
    	<div class="row">
      	<div class="col-xs-3 col-xs-offset-9">
      		<p>CopyRight Infratop.inc</p>
      	</div>
      </div>
    </div>
  </footer>


    

  </body>