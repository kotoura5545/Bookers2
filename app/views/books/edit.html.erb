<body>
  	<div class="body">
      <div class="container">
      	<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
    <%=form_for @book_edit do |f| %>
  <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :book_title, class: "book_title" %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :opinion, class: "book_body" %>
  </div>

  <div class="actions row">
    <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
  </div>
  <% end %>
		<%= link_to "Show", book_path(@book_edit), class: "book_#{@book_edit.id}" %>
		<%= link_to "Back", books_path, class: "back" %>
    </div>
    <div class="col-md-3"></div>
</div>
      </div>
    </div>

    <footer>
  <div class="container">
  	<div class="row">
    	<div class="col-xs-3 col-xs-offset-9">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>




</body>