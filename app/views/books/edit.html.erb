  <body>
    	<div class="body">
        <div class="container">
      
        	<div class="row">
            <div class="col-xs-3">
            <%= render 'partial/form' %>
            </div>

    <div class="col-xs-9">
        <h2>Book detail</h2>

        <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
            <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag , :image, :fill, 100, 100, format: 'jpeg' %></td>
          <td><%= book.book_title %></td>
          <td><%= book.opinion %></td>
          <%= link_to edit_user_path(current_user), class:"edit_book_#{book_params}"  do %><button type="button" class="btn btn-success edit_book_#{current_user}">Edit</button>
          <% end %>
          <%= link_to destroy_book_session_path, class:"destroy_book{book_params}", method: :delete do %><button type="button" class="btn btn-danger">Destroy</button>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

    </div>
  </div>
</div>

      <footer>
    <div class="container">
    	<div class="row">
      	<div class="col-xs-3 col-xs-offset-9">
      		<p>CopyRight Infratop.inc</p>
      	</div>
      </div>
    </div>
  </footer>


    

  </body>