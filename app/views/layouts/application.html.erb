<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">
        Bookers
      </a>
    </div>
    <% if user_signed_in? %>
    <div class="collapse navbar-collapse navbar-right" id="navbarEexample7">
      <ul class="nav navbar-nav">
        <li><%= link_to user_path(current_user) do %><i class="fas fa-home home"></i>Home<% end %></li>
        <li><%= link_to users_path do %><i class="fas fa-book users"></i>User<% end %></li>
        <li><%= link_to books_path do %><i class="fas fa-book books"></i>Books<% end %></li>
        <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt logout"></i></i>logout<% end %></li>
      </ul>
    <% else %>
    <div class="collapse navbar-collapse navbar-right" id="navbarEexample7">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home",root_path,class:"glyphicon glyphicon-home home" %></li>
        <li><%= link_to "About",about_path,class:"glyphicon glyphicon-link about" %></li>
        <li><%= link_to "sign up",new_user_registration_path, class:"glyphicon glyphicon-edit sign_up" %></li>
        <li><%= link_to "login",new_user_session_path, class:"glyphicon glyphicon-log-in sign_in" %></li>
      </ul>
       <% end %>
</nav>
    <%= yield %>

  </body>
</html>