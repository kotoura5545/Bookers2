        <%= h(flash[:notice]) %>
  <div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	            <% @user_books.each do |book| %>
        <tr>
          <td>
          	<%= link_to user_path(book.user_id), class:"user_#{book.user_id}" do %>
          	<%= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg", :size =>"50x50" %></td>
          <% end %>
          <td><%= link_to book_path(book), class:"book_#{book.id}" do %>
          	<%= book.book_title %></td>
          <td><%= book.opinion %></td>
          <% end %>
        </tr>
      <% end %>
  </tbody>
</table>
